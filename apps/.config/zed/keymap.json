[
  {
    "context": "Workspace",
    "bindings": {
      "cmd-k cmd-g": ["task::Spawn", { "task_name": "Open repository in lazygit" }],
      "cmd-k g": ["task::Spawn", { "task_name": "Open repository in Sublime Merge" }],
      "cmd-8": ["task::Spawn", { "task_name": "Open lazydocker" }],
      "cmd-k cmd-t": "workspace::NewTerminal",
      "cmd-k t": "terminal_panel::ToggleFocus"
    }
  },
  {
		"context": "Editor",
		"bindings": {
			"alt-up": "editor::SelectLargerSyntaxNode",
			"alt-down": "editor::SelectSmallerSyntaxNode",
			"ctrl-cmd-up": "editor::MoveLineUp",
			"ctrl-cmd-down": "editor::MoveLineDown"
		}
	}
]
