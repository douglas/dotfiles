{
	"icon_theme": "Material Icon Theme",
 "telemetry": {
		"diagnostics": false,
		"metrics": false
	},
	"language_models": {
		"ollama": {
			"low_speed_timeout_in_seconds": 30
		}
	},
	"base_keymap": "JetBrains",
	"assistant": {
		"default_model": {
			"provider": "zed.dev",
			"model": "claude-3-5-sonnet-latest"
		},
		"version": "2",
		"provider": null
	},
	// "vim_mode": true,
	"features": {
		"copilot": true
	},
	"terminal": {
		"dock": "bottom",
		"font_family": "OperatorMono Nerd Font",
		"font_size": 16,
		"font_weight": 300,
		"line_height": "standard"
  },
	"show_inline_completions": true,
	"theme": "Catppuccin Frapp√©",
	"buffer_font_family": "Operator Mono Book",
	"soft_wrap": "editor_width",
	"hard_tabs": true,
	"tab_size": 2,
	"format_on_save": "off",
	"buffer_font_size": 16,
	"buffer_line_height": {
		"custom": 1.7
	},
	"indent_guides": {
		"enabled": false
	},
	"tab_bar": {
		"show": true
	},
	"semantic_index": {
		"enabled": true
	},
	"languages": {
		"Ruby": {
			"show_inline_completions": true,
			// "formatter": {
			// 	"external": {
			// 		"command": "./bin/bundle",
			// 		"arguments": [
			// 			"exec",
			// 			"rubocop",
			// 			"--server",
			// 			"--autocorrect",
			// 			"--fail-level",
			// 			"error",
			// 			"--stdin",
			// 			"corrected.rb",
			// 			"--stderr"
			// 		]
			// 	}
			// },
			"language_servers": [
				"ruby-lsp",
				"tailwindcss-language-server",
				"!solargraph"
			]
		},
		"Markdown": {
			"soft_wrap": "preferred_line_length",
			"preferred_line_length": 80,
			"hard_tabs": false
		},
		"YAML": {
			"hard_tabs": false
		}
	},
	"lsp": {
		"ruby-lsp": {
			"initialization_options": {
				"enabledFeatures": {
					"diagnostics": false
				}
			}
		},
	  "languages": {
	    "JavaScript": {
	      "code_actions_on_format": {
	        "source.fixAll.eslint": true
	      }
	    }
	  },
		"rubocop": {
			"initialization_options": {
				"safeAutocorrect": false
			}
		}
		// 	"tailwindcss-language-server": {
		// 		"settings": {
		// 			"includeLanguages": {
		// 				"erb": "html",
		// 				"ruby": "html"
		// 			},
		// 			"experimental": {
		// 				"classRegex": ["\\bclass:\\s*['\"]([^'\"]*)['\"]"]
		// 			}
		// 		}
		// 	}
	},
	"file_scan_exclusions": ["*.git", "*.DS_Store"]
}
